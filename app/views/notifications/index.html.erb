<header class="page-title">
  <h1>通知設定</h1>
</header>

<%= form_for @notification, url: notification_path(@notification), html: { class: '', method: :put } do |f| %>
  <div class="group-btn-notification">
    <div class="text">新着メッセージがあった時</div>
    <div class="button-switch">
      <input type="checkbox" id="switch-message" class="switch" <%= @notification.message_type == "turn_on_message" ? "checked" : "" %> />
      <%= f.hidden_field :message_type, value: Notification.message_types[@notification.message_type] %>
      <label for="switch-blue" class="lbl-off">Off</label>
      <label for="switch-blue" class="lbl-on">On</label>
    </div>
  </div>

  <div class="group-btn-notification">
    <div class="text">いいね！された時</div>
    <div class="button-switch">
      <input type="checkbox" id="switch-like" class="switch" <%= @notification.like_type == "turn_on_like" ? "checked" : "" %> />
      <%= f.hidden_field :like_type, value: Notification.like_types[@notification.like_type] %>
      <label for="switch-blue" class="lbl-off">Off</label>
      <label for="switch-blue" class="lbl-on">On</label>
    </div>
  </div>

  <div class="group-btn-notification">
    <div class="text">その他の通知</div>
    <div class="button-switch">
      <input type="checkbox" id="switch-notification" class="switch" <%= @notification.notification_type == "turn_on_notificaton" ? "checked" : "" %> />
      <%= f.hidden_field :notification_type, value: Notification.notification_types[@notification.notification_type] %>
      <label for="switch-blue" class="lbl-off">Off</label>
      <label for="switch-blue" class="lbl-on">On</label>
    </div>
  </div>

  <div class="group-btn">
    <%= f.submit "決定", class: 'btn-submit' %>
  </div>
<% end %>