<li>
  <a href="<%= user_path(user) %>">
    <span class="avatar available">
      <%= image_tag user.image.url, class: 'img-circle' %>
    </span>
    <div class="body">
      <div class="header">
        <span class="username"><%= user.nickname %>、<%= user.age %>歳</span><br/>
        <span class="residence"><%= User.get_province(user.residence) %></span>
        <small class="timestamp text-muted">
          <i class="fa fa-clock-o"></i><%= time_ago_in_words user.last_visit_at %>
        </small>
      </div>
    </div>
  </a>
</li>
