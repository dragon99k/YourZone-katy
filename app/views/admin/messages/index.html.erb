<% title = 'メッセージ一覧管理' %>

<div class="content-header">
  <h1>
    <%= title %>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active"><%= title %></li>
  </ol>
</div>

<div class="content body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="center">
          <%= render "layouts/flash", resource: flash = "" %>
        </div>
        <div class="box box-primary">
          <div class="box-body">
            <table class="table table-hover text-nowrap table-bordered">
              <thead>
              <tr>
                <th>差出人</th>
                <th>宛先</th>
                <th>コンテンツ</th>
              </tr>
              </thead>
              <tbody>
              <% @messages.each do |message| %>
                <tr>
                  <td><%= message.user.nickname %></td>
                  <td><%= message.receiver.nickname %></td>
                  <td>
                    <%= message.body %>
                    </br>
                    <%= link_to '画像添付', message.image.url, target: :_blank %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>

            <div id="paginator" class="pull-right">
              <%= paginate @messages %>
            </div>
          </div><!-- /.box-body -->
        </div>
      </div>
    </div>
  </div>
</div>
