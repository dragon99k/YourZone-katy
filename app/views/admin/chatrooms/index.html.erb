<% title = 'メッセージ履歴' %>

<div class="content-header">
  <h1>
    <%= title %>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active"><%= title %></li>
  </ol>
</div>

<div class="content body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="box box-primary">
          <div class="box-body">
            <table class="table table-hover text-nowrap table-bordered">
              <thead>
              <tr>
                <th>ID</th>
                <th>ユーザ１</th>
                <th>ユーザ２</th>
                <th>最後のメッセージ</th>
              </tr>
              </thead>
              <tbody>
              <% @chatrooms.each do |chatroom| %>
                <tr>
                  <td><a href="<%= admin_chatroom_path(chatroom) %>"><%= chatroom.id %></a></td>
                  <td><%= chatroom.user1.nickname %></td>
                  <td><%= chatroom.user2.nickname %></td>
                  <td><%= chatroom.last_message.body if chatroom.last_message %></td>
                </tr>
              <% end %>
              </tbody>
            </table>

            <div id="paginator" class="pull-right">
              <%= paginate @chatrooms %>
            </div>
          </div><!-- /.box-body -->
        </div>
      </div>
    </div>
  </div>
</div>
