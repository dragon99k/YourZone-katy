<% title = 'メッセージ履歴' %>

<div class="content-header">
  <h1>
    <%= title %>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active"><%= title %></li>
  </ol>
</div>

<div class="content body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="box box-primary">
          <div class="box-body">
            <table class="table table-hover text-nowrap table-bordered">
              <thead>
              <tr>
                <th>ID</th>
                <th>User</th>
                <th>Message</th>
                <th>Time</th>
              </tr>
              </thead>
              <tbody>
              <% @messages.each do |message| %>
                <tr>
                  <td><%= message.id %></td>
                  <td><%= message.user.nickname %></td>
                  <td><%= message.body %></td>
                  <td><%= message.created_at.strftime('%Y/%d/%m %H:%M:%S') %></td>
                </tr>
              <% end %>
              </tbody>
            </table>

            <div id="paginator" class="pull-right">
              <%= paginate @messages %>
            </div>
          </div><!-- /.box-body -->
        </div>
      </div>
    </div>
  </div>
</div>
