<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'registration-form' }) do |f| %>
  <header>
    <h1 class="center">パスワードを変更してください</h1>
  </header>

  <%= f.hidden_field :reset_password_token %>

  <div class="center error-messages">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <div class="field">
    <label>
      新しいパスワード
      <% if @minimum_password_length %>
        <span>(<%= @minimum_password_length %> 最小文字数)</span>
      <% end %>
    </label>

    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'login-type' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "新しいパスワードを確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'login-type' %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードを変更する", class: 'btn-login' %>
  </div>
<% end %>
