<% if resource.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= I18n.t("errors.messages.not_saved_1",
                 count: resource.errors.count)
      %>
    </h2>
    <ul>
      <% resource.errors.messages.each do |key, message| %>
        <% message.each do |mes| %>
          <li><%= mes %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>
